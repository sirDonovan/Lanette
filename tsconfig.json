{
    "compilerOptions": {
		"target": "esnext",
		"strict": true,
		"incremental": true,
		"outDir": "build",
		"sourceMap": true,
		"noEmitOnError": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"importsNotUsedAsValues": "error",
		"typeRoots": [
		    "node_modules/@types"
		],
		"types": [
			"mocha",
		    "node",
		    "ws"
		],
		"lib": [
		    "esnext"
		]
	},
	"include": [
		"src/**/*.ts"
	]
}
